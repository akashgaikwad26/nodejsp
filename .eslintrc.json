{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",  // Uses the recommended rules from ESLint
    "plugin:prettier/recommended" // Integrates with Prettier for code formatting
  ],
  "parserOptions": {
    "ecmaVersion": 12, // Supports modern ECMAScript features (2021)
    "sourceType": "module" // Allows usage of imports
  },
  "rules": {
    "semi": ["error", "always"], // Enforces semicolons at the end of statements
    "quotes": ["error", "single"], // Enforces single quotes for strings
    "no-unused-vars": ["warn"], // Warns about variables that are declared but not used
    "eqeqeq": ["error", "always"], // Enforces strict equality (=== and !==)
    "no-console": "warn", // Warns on console.log usage
    "prettier/prettier": ["error"] // Runs Prettier on files and marks style issues as errors
  },
  "plugins": [
    "prettier" // Adds Prettier plugin for code formatting
  ]
}
